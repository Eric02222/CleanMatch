generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:senai@127.0.0.1:3306/cleanMatch"
}

//referencia
model Usuario {
  id                  Int    @id @default(autoincrement())
  nome                String @db.VarChar(100)
  email               String @unique @db.VarChar(100)
  senha               String
  contato             int
  tipo_conta          Role     @default(Cliente)
  cep                 int
  estado              String
  cidade              String
  valor_min           int
  valor_max           int
  cargaHoraria_inicio DateTime?
  cargaHoraria_fim    DateTime?
  descricao           String @db.VarChar(500)
  foto_perfil         String @db.VarChar(150)

  @@map("usuario")
}


model token {
  id        Int      @id @default(autoincrement())
  token     String
  type      String
  expiresAt DateTime
  revoked   Boolean @default(value: false)
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

enum Role {
  Cliente
  Prestador/a de Servi√ßo
}