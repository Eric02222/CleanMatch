generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "postgresql://postgres:861391@localhost:5432/cleanMatch"
}

//referencia
model Usuario {
  id                  Int       @id @default(autoincrement())
  nome                String    @db.VarChar(100)
  email               String    @unique @db.VarChar(100)
  senha               String
  contato             String       
  tipo_conta          String
  cep                 String
  estado              String
  cidade              String
  rua                 String
  valor_min           String
  valor_max           String
  cargaHoraria_inicio String
  cargaHoraria_fim    String
  descricao           String    @db.VarChar(500)
  foto_perfil         String?   @db.Text
  tokens              token[]

  @@map("usuario")
}

model token {
  id        Int      @id @default(autoincrement())
  token     String   @db.VarChar(255)
  type      String
  expiresAt DateTime
  revoked   Boolean  @default(value: false)
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
}
